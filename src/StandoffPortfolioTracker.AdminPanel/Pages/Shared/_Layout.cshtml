<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Standoff Tracker</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="/StandoffPortfolioTracker.AdminPanel.styles.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <header style="position: absolute; width: 100%; z-index: 10;">
        <nav class="navbar navbar-expand-sm navbar-dark bg-transparent">
            <div class="container">
                <a class="navbar-brand fw-bold" href="~/">Standoff Tracker</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <a href="/" class="btn btn-sm btn-outline-light">На главную</a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>