@code {
    private string? currentAvatarUrl;
    private string? currentDisplayName;
    private decimal currentBalance = 0;
    private SubscriptionType currentSubscription = SubscriptionType.None;
    private string myUserId = "";
    private bool isBalanceAnimating = false;

    private bool isNotificationsOpen = false;
    private bool hasUnread = false;
    private List<NotificationItem> userNotifications = new();

    public class NotificationItem
    {
        public string Title { get; set; } = "";
        public string Message { get; set; } = "";
        public DateTime Date { get; set; }
        public NotifType Type { get; set; }
        public bool IsRead { get; set; } = false;
    }

    public enum NotifType { Boost, Money, Goal, News }

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
        GlobalNotifier.OnNotificationReceived += HandleNotification;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !string.IsNullOrEmpty(myUserId))
        {
            await LoadNotificationsFromStorage();
        }
    }

    private async Task SaveNotificationsToStorage()
    {
        if (string.IsNullOrEmpty(myUserId)) return;
        var json = JsonSerializer.Serialize(userNotifications);
        await JS.InvokeVoidAsync("notificationStorage.save", $"notifs_{myUserId}", json);
    }

    private async Task LoadNotificationsFromStorage()
    {
        try
        {
            var json = await JS.InvokeAsync<string>("notificationStorage.load", $"notifs_{myUserId}");
            if (!string.IsNullOrEmpty(json))
            {
                userNotifications = JsonSerializer.Deserialize<List<NotificationItem>>(json) ?? new();
                hasUnread = userNotifications.Any(x => !x.IsRead);
                StateHasChanged();
            }
        }
        catch { }
    }

    private async void HandleNotification(string targetId, string msg, ToastLevel level)
    {
        if (!string.IsNullOrEmpty(myUserId) && targetId.Equals(myUserId, StringComparison.OrdinalIgnoreCase))
        {
            await InvokeAsync(async () =>
            {
                var type = DetermineType(msg);
                userNotifications.Add(new NotificationItem
                {
                    Title = GetTitle(type),
                    Message = msg,
                    Date = DateTime.Now,
                    Type = type
                });
                hasUnread = true;
                await SaveNotificationsToStorage();
                await LoadUserData();
                if (level == ToastLevel.Success)
                {
                    isBalanceAnimating = true;
                    StateHasChanged();
                    await Task.Delay(600);
                    isBalanceAnimating = false;
                }
                StateHasChanged();
            });
        }
    }

    private NotifType DetermineType(string msg)
    {
        if (msg.Contains("Буст", StringComparison.OrdinalIgnoreCase)) return NotifType.Boost;
        if (msg.Contains("баланс", StringComparison.OrdinalIgnoreCase) || msg.Contains("зачислен", StringComparison.OrdinalIgnoreCase)) return NotifType.Money;
        if (msg.Contains("Цель", StringComparison.OrdinalIgnoreCase)) return NotifType.Goal;
        return NotifType.News;
    }

    private string GetTitle(NotifType type) => type switch
    {
        NotifType.Boost => "🚀 Скачок цены",
        NotifType.Money => "💰 Пополнение",
        NotifType.Goal => "🎯 Цель достигнута",
        _ => "ℹ️ Информация"
    };

    private string GetNotifIcon(NotifType type) => type switch { NotifType.Boost => "bi-rocket-takeoff", NotifType.Money => "bi-cash-coin", NotifType.Goal => "bi-trophy", _ => "bi-info-circle" };
    private string GetNotifColorClass(NotifType type) => type switch { NotifType.Boost => "notif-boost", NotifType.Money => "notif-money", NotifType.Goal => "notif-goal", _ => "notif-news" };

    private string GetTimeAgo(DateTime dt)
    {
        var span = DateTime.Now - dt;
        if (span.TotalMinutes < 1) return "сейчас";
        if (span.TotalMinutes < 60) return $"{(int)span.TotalMinutes}м";
        return dt.ToString("HH:mm");
    }

    private async Task ToggleNotifications()
    {
        isNotificationsOpen = !isNotificationsOpen;
        if (isNotificationsOpen && hasUnread)
        {
            foreach (var n in userNotifications) n.IsRead = true;
            hasUnread = false;
            await SaveNotificationsToStorage();
        }
    }

    private async Task ClearNotifications()
    {
        userNotifications.Clear();
        isNotificationsOpen = false;
        hasUnread = false;
        await JS.InvokeVoidAsync("notificationStorage.clear", $"notifs_{myUserId}");
    }

    private async Task LoadUserData()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            using var scope = ScopeFactory.CreateScope();
            var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ApplicationUser>>();
            myUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "";
            var appUser = await userManager.FindByIdAsync(myUserId);
            if (appUser != null)
            {
                currentAvatarUrl = appUser.AvatarUrl;
                currentDisplayName = !string.IsNullOrEmpty(appUser.DisplayName) ? appUser.DisplayName : appUser.UserName;
                currentBalance = appUser.Balance;
                currentSubscription = appUser.SubType;
            }
        }
    }

    private string GetSubscriptionClass(SubscriptionType type) => type switch { SubscriptionType.Premium => "badge-premium", SubscriptionType.Lite => "badge-lite", _ => "" };
    private string GetAvatarGlowClass(SubscriptionType type) => type switch { SubscriptionType.Premium => "glow-premium", SubscriptionType.Lite => "glow-lite", _ => "" };
    private string? GetToken() => HttpContextAccessor.HttpContext != null ? Antiforgery.GetAndStoreTokens(HttpContextAccessor.HttpContext).RequestToken : null;
    public void Dispose() => GlobalNotifier.OnNotificationReceived -= HandleNotification;
}