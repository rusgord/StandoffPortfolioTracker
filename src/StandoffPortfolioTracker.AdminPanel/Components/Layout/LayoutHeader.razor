@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using StandoffPortfolioTracker.Core.Entities
@using StandoffPortfolioTracker.Core.Enums
@using StandoffPortfolioTracker.AdminPanel.Services
@using Microsoft.Extensions.DependencyInjection
@using System.Security.Claims
@using System.Text.Json

@inject IServiceScopeFactory ScopeFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@inject GlobalNotificationService GlobalNotifier
@inject IHttpContextAccessor HttpContextAccessor
@inject IJSRuntime JS
@implements IDisposable
@rendermode InteractiveServer

@* Невидимая подложка для закрытия по клику вне меню *@
@if (isNotificationsOpen)
{
    <div class="notif-click-overlay" @onclick="() => isNotificationsOpen = false"></div>
}

<div class="top-row px-4 sticky-top d-flex align-items-center justify-content-between"
     style="background: rgba(26, 29, 33, 0.85); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255,255,255,0.05); height: 74px; z-index: 1000;">

    <div class="d-md-none">
        <i class="bi bi-list fs-3 text-secondary"></i>
    </div>

    <div class="d-flex align-items-center gap-3 ms-auto">
        <AuthorizeView>
            <Authorized>
                <div class="notification-container position-relative" style="z-index: 1002;">
                    <button class="btn btn-icon-glass position-relative @(hasUnread ? "shake-anim" : "")" @onclick="ToggleNotifications">
                        <i class="bi @(hasUnread ? "bi-bell-fill" : "bi-bell") text-secondary"></i>
                        @if (userNotifications.Count(x => !x.IsRead) > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-dark rounded-circle"></span>
                        }
                    </button>

                    @if (isNotificationsOpen)
                    {
                        <div class="notification-dropdown shadow-lg animate-in" @onclick:stopPropagation>
                            <div class="p-3 border-bottom d-flex justify-content-between align-items-center">
                                <h6 class="m-0 fw-bold text-white">Уведомления</h6>
                                @* ИСПРАВЛЕНО: Кнопка очистки *@
                                <button class="btn-clear-red" @onclick="ClearNotifications">Очистить всё</button>
                            </div>
                            <div class="notification-list custom-scrollbar">
                                @if (userNotifications.Any())
                                {
                                    @foreach (var n in userNotifications.OrderByDescending(x => x.Date))
                                    {
                                        <div class="notif-item p-3 border-bottom border-secondary border-opacity-10 @(n.IsRead ? "" : "bg-unread")">
                                            <div class="d-flex gap-3">
                                                <div class="notif-icon @GetNotifColorClass(n.Type)">
                                                    <i class="bi @GetNotifIcon(n.Type)"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                                        <div class="notif-title-text">@n.Title</div>
                                                        <div class="notif-time-text">@GetTimeAgo(n.Date)</div>
                                                    </div>
                                                    <div class="notif-msg-text">@n.Message</div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center p-4 text-muted small">
                                        <i class="bi bi-bell-slash fs-4 d-block mb-2 opacity-50"></i>
                                        Нет новых уведомлений
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <a href="billing" class="btn btn-glass-gold d-flex align-items-center gap-2 text-decoration-none @(isBalanceAnimating ? "balance-pulse" : "")" title="Пополнить баланс">
                    <i class="bi bi-wallet2 text-warning"></i>
                    <span class="fw-bold text-white">@currentBalance.ToString("N0")</span>
                    <span class="text-warning small fw-bold">G</span>
                </a>

                <div class="vr mx-2 bg-secondary" style="height: 24px; opacity: 0.2;"></div>

                <div class="d-flex align-items-center gap-2">
                    <a href="settings" class="d-flex align-items-center gap-3 text-decoration-none user-card p-2 rounded-pill transition">
                        <div class="d-none d-md-flex flex-column align-items-end lh-1">
                            <div class="fw-bold text-white mb-1">@(!string.IsNullOrEmpty(currentDisplayName) ? currentDisplayName : "User")</div>
                            <div class="d-flex align-items-center gap-2">
                                @if (currentSubscription != SubscriptionType.None)
                                {
                                    <span class="badge-mini @GetSubscriptionClass(currentSubscription)">
                                        @if (currentSubscription == SubscriptionType.Premium)
                                        {
                                            <i class="bi bi-stars me-1"></i>
                                        }
                                        @currentSubscription.ToString().ToUpper()
                                    </span>
                                }
                                <span class="text-secondary small-id">ID: @(myUserId.Length > 4 ? myUserId.Substring(0, 4) : myUserId)</span>
                            </div>
                        </div>
                        <div class="avatar-wrapper @GetAvatarGlowClass(currentSubscription)">
                            @if (!string.IsNullOrEmpty(currentAvatarUrl))
                            {
                                <img src="@currentAvatarUrl" alt="Avatar" />
                            }
                            else
                            {
                                <div class="avatar-placeholder">
                                    <span class="fw-bold">@(!string.IsNullOrEmpty(currentDisplayName) ? currentDisplayName[0] : 'U')</span>
                                </div>
                            }
                            <div class="status-indicator"></div>
                        </div>
                    </a>

                    <form action="Identity/Account/Logout" method="post" class="d-inline">
                        <input name="__RequestVerificationToken" type="hidden" value="@GetToken()" />
                        <input name="returnUrl" type="hidden" value="/" />
                        <button type="submit" class="btn btn-icon-danger" title="Выйти">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </form>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

