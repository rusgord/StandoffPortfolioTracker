@inherits LayoutComponentBase
@using StandoffPortfolioTracker.AdminPanel.Components.Shared

<div class="page" style="background-color: #121417; color: #e0e0e0;">
    <div class="sidebar" style="background: #1a1d21; border-right: 1px solid rgba(255,255,255,0.05);">
        <NavMenu />
    </div>

    <main class="d-flex flex-column min-vh-100">
        <LayoutHeader />

        <article class="content flex-grow-1 p-0">
            @Body
        </article>
    </main>
</div>

<Toast @rendermode="InteractiveServer" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>