@code {
    private string? currentAvatarUrl;
    private string? currentDisplayName;
    private decimal currentBalance = 0;
    private SubscriptionType currentSubscription = SubscriptionType.None;

    private string myUserId = "";
    private bool isBalanceAnimating = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
        GlobalNotifier.OnNotificationReceived += HandleNotification;
    }

    private async void HandleNotification(string targetId, string msg, ToastLevel level)
    {
        if (!string.IsNullOrEmpty(myUserId) && targetId.Equals(myUserId, StringComparison.OrdinalIgnoreCase))
        {
            await InvokeAsync(async () =>
            {
                await Task.Delay(300);
                await LoadUserData();
                isBalanceAnimating = true;
                StateHasChanged();
                await Task.Delay(600);
                isBalanceAnimating = false;
                StateHasChanged();
            });
        }
    }

    private async Task LoadUserData()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            using (var scope = ScopeFactory.CreateScope())
            {
                var userManager = scope.ServiceProvider.GetRequiredService<UserManager<ApplicationUser>>();

                if (string.IsNullOrEmpty(myUserId))
                {
                    myUserId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "";
                }

                if (!string.IsNullOrEmpty(myUserId))
                {
                    var appUser = await userManager.FindByIdAsync(myUserId);
                    if (appUser != null)
                    {
                        currentAvatarUrl = appUser.AvatarUrl;
                        currentDisplayName = !string.IsNullOrEmpty(appUser.DisplayName) ? appUser.DisplayName : appUser.UserName;
                        currentBalance = appUser.Balance;
                        currentSubscription = appUser.SubType;
                    }
                }
            }
        }
    }

    // CSS классы для мини-бейджика (текст)
    private string GetSubscriptionClass(SubscriptionType type) => type switch
    {
        SubscriptionType.Premium => "badge-premium",
        SubscriptionType.Lite => "badge-lite",
        _ => ""
    };

    // CSS классы для свечения аватара
    private string GetAvatarGlowClass(SubscriptionType type) => type switch
    {
        SubscriptionType.Premium => "glow-premium",
        SubscriptionType.Lite => "glow-lite",
        _ => ""
    };

    private string GetInitials(string? name)
    {
        if (string.IsNullOrEmpty(name)) return "U";
        return name.Substring(0, 1).ToUpper();
    }

    private string? GetToken()
    {
        return HttpContextAccessor.HttpContext != null
            ? Antiforgery.GetAndStoreTokens(HttpContextAccessor.HttpContext).RequestToken
            : null;
    }

    public void Dispose()
    {
        GlobalNotifier.OnNotificationReceived -= HandleNotification;
    }
}