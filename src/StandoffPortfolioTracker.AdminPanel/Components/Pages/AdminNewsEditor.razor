@page "/admin/news/edit/{Id:int?}"
@page "/admin/news/create"
@using Microsoft.AspNetCore.Authorization
@using StandoffPortfolioTracker.Core.Entities
@using StandoffPortfolioTracker.AdminPanel.Services
@attribute [Authorize(Roles = "Admin")]
@inject NewsService NewsService
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@(IsEdit ? "✏️ Редактирование новости" : "📝 Новая статья")</h3>
        <button class="btn btn-outline-secondary" @onclick='() => Nav.NavigateTo("/news")'>Отмена</button>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <label class="form-label fw-bold">Заголовок</label>
                    <input type="text" class="form-control mb-3" @bind="post.Title" placeholder="Громкий заголовок..." />

                    <label class="form-label fw-bold">Категория</label>
                    <select class="form-select mb-3" @bind="post.Category">
                        @foreach (var cat in Enum.GetValues(typeof(NewsCategory)))
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>

                    <label class="form-label fw-bold">Обложка (URL)</label>
                    <input type="text" class="form-control mb-2" @bind="post.CoverImageUrl" placeholder="https://..." />
                    @if (!string.IsNullOrEmpty(post.CoverImageUrl))
                    {
                        <img src="@post.CoverImageUrl" class="img-fluid rounded mb-3" style="max-height: 150px; object-fit: cover;" />
                    }

                    <label class="form-label fw-bold">Краткое описание</label>
                    <textarea class="form-control mb-3" rows="3" @bind="post.ShortDescription"></textarea>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="pub" @bind="post.IsPublished">
                        <label class="form-check-label" for="pub">Опубликовать сразу</label>
                    </div>

                    <button class="btn btn-success w-100 fw-bold" @onclick="Save">💾 Сохранить новость</button>
                    @if (IsEdit)
                    {
                        <button class="btn btn-danger w-100 mt-2" @onclick="Delete">🗑 Удалить</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h5 class="mb-3 text-muted">Содержание статьи</h5>

                    @if (post.Blocks.Any())
                    {
                        <div class="d-flex flex-column gap-3">
                            @foreach (var (block, index) in post.Blocks.Select((b, i) => (b, i)))
                            {
                                <div class="news-block-item bg-white p-3 rounded border position-relative">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-secondary">@block.Type</span>
                                        <div>
                                            <button class="btn btn-sm btn-link text-muted" @onclick="() => MoveBlock(index, -1)" disabled="@(index == 0)">⬆</button>
                                            <button class="btn btn-sm btn-link text-muted" @onclick="() => MoveBlock(index, 1)" disabled="@(index == post.Blocks.Count - 1)">⬇</button>
                                            <button class="btn btn-sm btn-outline-danger py-0 px-2 ms-2" @onclick="() => RemoveBlock(block)">✕</button>
                                        </div>
                                    </div>

                                    @switch (block.Type)
                                    {
                                        case NewsBlockType.Header:
                                            <input type="text" class="form-control fw-bold fs-5" placeholder="Подзаголовок..." @bind="block.Content" />
                                            break;
                                        case NewsBlockType.Paragraph:
                                            <textarea class="form-control" rows="3" placeholder="Текст абзаца..." @bind="block.Content"></textarea>
                                            break;
                                        case NewsBlockType.Image:
                                            <input type="text" class="form-control mb-2" placeholder="Ссылка на фото..." @bind="block.Content" />
                                            @if (!string.IsNullOrEmpty(block.Content))
                                            {
                                                <img src="@block.Content" style="height: 100px; border-radius: 8px;" />
                                            }
                                            break;
                                        case NewsBlockType.Video:
                                            <input type="text" class="form-control" placeholder="Ссылка на YouTube..." @bind="block.Content" />
                                            <small class="text-muted">Вставьте обычную ссылку, мы сами сделаем embed.</small>
                                            break;
                                        case NewsBlockType.Quote:
                                            <textarea class="form-control fst-italic border-warning border-3" rows="2" placeholder="Цитата..." @bind="block.Content"></textarea>
                                            break;
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5 text-muted">Добавьте блоки, чтобы написать статью</div>
                    }

                    <div class="mt-4 p-3 bg-white rounded border d-flex gap-2 justify-content-center">
                        <button class="btn btn-outline-primary btn-sm" @onclick="() => AddBlock(NewsBlockType.Header)"><i class="bi bi-type-h1"></i> Заголовок</button>
                        <button class="btn btn-outline-dark btn-sm" @onclick="() => AddBlock(NewsBlockType.Paragraph)"><i class="bi bi-text-paragraph"></i> Текст</button>
                        <button class="btn btn-outline-success btn-sm" @onclick="() => AddBlock(NewsBlockType.Image)"><i class="bi bi-image"></i> Фото</button>
                        <button class="btn btn-outline-danger btn-sm" @onclick="() => AddBlock(NewsBlockType.Video)"><i class="bi bi-youtube"></i> Видео</button>
                        <button class="btn btn-outline-warning btn-sm" @onclick="() => AddBlock(NewsBlockType.Quote)"><i class="bi bi-chat-quote"></i> Цитата</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    private NewsPost post = new();
    private bool IsEdit => Id.HasValue;

    protected override async Task OnInitializedAsync()
    {
        if (IsEdit)
        {
            var existing = await NewsService.GetNewsByIdAsync(Id.Value);
            if (existing != null) post = existing;
        }
    }

    private void AddBlock(NewsBlockType type)
    {
        post.Blocks.Add(new NewsBlock { Type = type, OrderIndex = post.Blocks.Count });
    }

    private void RemoveBlock(NewsBlock block)
    {
        post.Blocks.Remove(block);
        Reindex();
    }

    private void MoveBlock(int index, int direction)
    {
        var newIndex = index + direction;
        if (newIndex < 0 || newIndex >= post.Blocks.Count) return;

        var temp = post.Blocks[index];
        post.Blocks[index] = post.Blocks[newIndex];
        post.Blocks[newIndex] = temp;
        Reindex();
    }

    private void Reindex()
    {
        for (int i = 0; i < post.Blocks.Count; i++) post.Blocks[i].OrderIndex = i;
    }

    private async Task Save()
    {
        Reindex();
        await NewsService.SaveNewsAsync(post);
        Nav.NavigateTo("/news");
    }

    private async Task Delete()
    {
        if (IsEdit) await NewsService.DeleteNewsAsync(post.Id);
        Nav.NavigateTo("/news");
    }
}