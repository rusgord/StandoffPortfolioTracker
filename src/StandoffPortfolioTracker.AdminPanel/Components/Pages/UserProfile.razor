                <div class="row g-3">
                    @foreach (var item in showcaseItems)
                    {
                        <div class="col-6 col-md-3">
                            <div class="skin-display-card">
                                <div class="rarity-line @GetRarityCss(item.ItemBase?.Rarity)"></div>

                                <div class="skin-img-wrapper">
                                    <img src="@item.ItemBase?.ImageUrl" />
                                </div>

                                <div class="text-center mt-auto">
                                    <div class="text-uppercase small text-muted fw-bold" style="font-size: 0.65rem;">@item.ItemBase?.Name</div>
