        }

        @if ((targetUser.ShowTopItems || IsOwner) && topItems.Any())
        {
            <div class="mb-5">
                <h5 class="fw-bold mb-3 ps-1 text-dark d-flex align-items-center gap-2">
                    <i class="bi bi-graph-up-arrow text-primary"></i> Топ активы
