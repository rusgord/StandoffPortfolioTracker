@page "/market-editor"
@using StandoffPortfolioTracker.Core.Entities
@using StandoffPortfolioTracker.Core.Enums
@using StandoffPortfolioTracker.AdminPanel.Services
@inject ItemService ItemService
@inject PriceParserService ParserService
@rendermode InteractiveServer

<style>
    /* Цвета редкости Standoff 2 */
    .rarity-common {
        background-color: #B0C3D9;
        color: #333;
    }

    .rarity-uncommon {
        background-color: #5E98D9;
        color: #fff;
    }

    .rarity-rare {
        background-color: #4B69FF;
        color: #fff;
    }

    .rarity-epic {
        background-color: #8847FF;
        color: #fff;
    }

    .rarity-legendary {
        background-color: #D32CE6;
        color: #fff;
    }

    .rarity-arcane {
        background-color: #EB4B4B;
        color: #fff;
    }

    .rarity-nameless {
        background: linear-gradient(45deg, #FFD700, #FDB931);
        color: #333;
        border: 1px solid #d4af37;
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .price-input {
        width: 100px !important;
        text-align: right;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>🛒 Справочник Предметов</h3>
        <div>
            <button class="btn btn-outline-secondary me-2" @onclick="ToggleCollectionManager">📁 Коллекции</button>
            <button class="btn btn-success" @onclick="CreateNewItem">➕ Добавить предмет</button>
        </div>
    </div>

    <div class="card mb-4 border-warning">
        <div class="card-body py-2">
            <div class="d-flex gap-3 align-items-center justify-content-between">
                <div>
                    <h6 class="mb-0 fw-bold">⚙️ Синхронизация</h6>
                    <small class="text-muted">Импорт базы и обновление цен</small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-danger" @onclick="RunImport" disabled="@isBusy">
                        @if (isBusy && currentAction == "import")
                        {
                            <span class="spinner-border spinner-border-sm"></span> <span>Загрузка...</span>
                        }
                        else
                        {
                            <span>🌍 Импорт (API)</span>
                        }
                    </button>
                    <button class="btn btn-sm btn-primary" @onclick="RunParser" disabled="@isBusy">
                        @if (isBusy && currentAction == "parse")
                        {
                            <span class="spinner-border spinner-border-sm"></span> <span>Цены...</span>
                        }
                        else
                        {
                            <span>💲 Обновить цены</span>
                        }
                    </button>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert alert-info mt-2 mb-0 py-1 small">@statusMessage</div>
            }
        </div>
    </div>

    @if (showCollectionManager)
    {
        <div class="card mb-4 border-info">
            <div class="card-header bg-info text-white d-flex justify-content-between">
                <span>📁 Управление коллекциями</span>
                <button class="btn-close" @onclick="ToggleCollectionManager"></button>
            </div>
            <div class="card-body">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Название коллекции" @bind="newCollectionName" />
                    <button class="btn btn-success" @onclick="SaveCollection">Сохранить</button>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var col in collections)
                    {
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary" @onclick="() => EditCollection(col)">@col.Name</button>
                            <button class="btn btn-outline-danger" @onclick="() => DeleteCollection(col.Id)">✕</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12 mb-3">
            <div class="card p-2 bg-light">
                <div class="row g-2">
                    <div class="col-md-3">
                        <input type="text" class="form-control form-control-sm" placeholder="🔍 Поиск..."
                               @bind="searchQuery" @bind:event="oninput" @onkeyup="ResetAndLoad" />
                    </div>
                    <div class="col-md-2">
                        <select class="form-select form-select-sm" @bind="filterType" @bind:after="ResetAndLoad">
                            <option value="">Все типы</option>
                            @foreach (var t in Enum.GetValues(typeof(ItemType)))
                            {
                                <option value="@t">@t</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select form-select-sm" @bind="filterRarity" @bind:after="ResetAndLoad">
                            <option value="">Вся редкость</option>
                            @foreach (var r in Enum.GetValues(typeof(ItemRarity)))
                            {
                                <option value="@r">@r</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select form-select-sm" @bind="filterCollection" @bind:after="ResetAndLoad">
                            <option value="0">Все коллекции</option>
                            @foreach (var c in collections)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 text-end">
                        <span class="text-muted small align-middle">Всего: @totalItems</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">Фото</th>
                                <th>Название</th>
                                <th>Редкость</th>
                                <th class="text-end">Цена (G)</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (items == null)
                            {
                                <tr><td colspan="5" class="text-center py-4">Загрузка...</td></tr>
                            }
                            else
                            {
                                @foreach (var item in items)
                                {
                                    <tr class="@(selectedItem?.Id == item.Id ? "table-active" : "")">
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" style="width: 40px; height: 40px; object-fit: contain;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted small">?</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="fw-bold text-truncate" style="max-width: 250px;">
                                                @if (item.IsStatTrack)
                                                {
                                                    <span class="badge bg-warning text-dark me-1" style="font-size: 0.6em;">ST</span>
                                                }
                                                @if (item.IsPattern)
                                                {
                                                    <span class="badge bg-info text-white me-1" style="font-size: 0.6em;">P</span>
                                                }
                                                @item.Name
                                            </div>
                                            <div class="text-muted small">@item.SkinName</div>
                                        </td>
                                        <td>
                                            <span class="badge @GetRarityClass(item.Rarity)">@item.Rarity</span>
                                            <div class="small text-muted mt-1">@item.Type</div>
                                        </td>
                                        <td class="text-end">
                                            <input type="number" step="0.01" class="form-control form-control-sm d-inline-block price-input"
                                                   value="@item.CurrentMarketPrice"
                                                   @onchange="@(e => UpdatePriceFast(item, e.Value))" />
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary border-0" @onclick="() => SelectItem(item)">
                                                ✏️
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer d-flex justify-content-between align-items-center py-2">
                    <button class="btn btn-sm btn-secondary" disabled="@(currentPage == 1)" @onclick="PrevPage">←</button>
                    <span class="small">Стр. @currentPage</span>
                    <button class="btn btn-sm btn-secondary" disabled="@(items?.Count < pageSize)" @onclick="NextPage">→</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-primary" style="position: sticky; top: 20px;">
                <div class="card-header bg-primary text-white">
                    @(selectedItem.Id == 0 ? "Новый предмет" : "Редактирование")
                </div>
                <div class="card-body">
                    <EditForm Model="@selectedItem" OnValidSubmit="SaveItem">
                        <DataAnnotationsValidator />

                        <div class="text-center mb-3">
                            @if (!string.IsNullOrEmpty(selectedItem.ImageUrl))
                            {
                                <img src="@selectedItem.ImageUrl" class="img-thumbnail" style="height: 100px;" />
                            }
                        </div>

                        <div class="mb-2">
                            <label class="small">Название</label>
                            <InputText @bind-Value="selectedItem.Name" class="form-control form-control-sm" />
                        </div>
                        <div class="mb-2">
                            <label class="small">Скин</label>
                            <InputText @bind-Value="selectedItem.SkinName" class="form-control form-control-sm" />
                        </div>

                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <label class="small">Тип</label>
                                <InputSelect @bind-Value="selectedItem.Type" class="form-select form-select-sm">
                                    @foreach (var t in Enum.GetValues(typeof(ItemType)))
                                    {
                                        <option value="@t">@t</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-6">
                                <label class="small">Редкость</label>
                                <InputSelect @bind-Value="selectedItem.Rarity" class="form-select form-select-sm">
                                    @foreach (var r in Enum.GetValues(typeof(ItemRarity)))
                                    {
                                        <option value="@r">@r</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="small">Коллекция</label>
                            <InputSelect @bind-Value="selectedItem.CollectionId" class="form-select form-select-sm">
                                <option value="1">Без коллекции</option>
                                @foreach (var c in collections)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3 border p-2 rounded bg-light">
                            <div class="form-check form-switch mb-1">
                                <InputCheckbox @bind-Value="selectedItem.IsStatTrack" class="form-check-input" id="stCheck" />
                                <label class="form-check-label small" for="stCheck">StatTrack™</label>
                            </div>
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="selectedItem.IsPattern" class="form-check-input" id="patCheck" />
                                <label class="form-check-label small" for="patCheck">Pattern Based (Паттерны)</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="small">Ссылка на картинку</label>
                            <InputText @bind-Value="selectedItem.ImageUrl" class="form-control form-control-sm text-muted" style="font-size: 0.7em;" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                            @if (selectedItem.Id != 0)
                            {
                                <button type="button" class="btn btn-outline-secondary" @onclick="CreateNewItem">Отмена</button>
                                <button type="button" class="btn btn-outline-danger btn-sm mt-2" @onclick="DeleteItem">Удалить предмет</button>
                            }
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Данные
    private List<ItemBase> items;
    private List<GameCollection> collections = new();
    private ItemBase selectedItem = new();
    private int totalItems = 0;

    // Фильтры и Пагинация
    private string searchQuery = "";
    private ItemType? filterType = null;
    private ItemRarity? filterRarity = null;
    private int filterCollection = 0;

    private int currentPage = 1;
    private const int pageSize = 20;

    // Состояние UI
    private bool isBusy = false;
    private string currentAction = "";
    private string statusMessage = "";
    private bool showCollectionManager = false;
    private string newCollectionName = "";
    private GameCollection? editingCollection;

    protected override async Task OnInitializedAsync()
    {
        collections = await ItemService.GetCollectionsAsync();
        await LoadData();
        // Инициализируем новый предмет по умолчанию
        CreateNewItem();
    }

    private async Task LoadData()
    {
        var result = await ItemService.GetItemsFilteredAsync(
            (currentPage - 1) * pageSize,
            pageSize,
            searchQuery,
            filterType,
            filterRarity,
            filterCollection);

        items = result.Items;
        totalItems = result.TotalCount;
    }

    private async Task ResetAndLoad()
    {
        currentPage = 1;
        await LoadData();
    }

    private async Task NextPage() { currentPage++; await LoadData(); }
    private async Task PrevPage() { if (currentPage > 1) { currentPage--; await LoadData(); } }

    // === Редактирование Предметов ===
    private void SelectItem(ItemBase item)
    {
        // Клонируем объект, чтобы изменения не применялись сразу в таблицу до сохранения
        // В EF Core проще перезапросить или просто присвоить ссылку (для Blazor Server ок)
        selectedItem = item;
    }

    private void CreateNewItem()
    {
        selectedItem = new ItemBase
            {
                CollectionId = 1, // Дефолт
                Type = ItemType.Skin,
                Rarity = ItemRarity.Common
            };
    }

    private async Task SaveItem()
    {
        if (selectedItem.Id == 0)
            await ItemService.AddItemAsync(selectedItem);
        else
            await ItemService.UpdateItemAsync(selectedItem);

        await LoadData();
        CreateNewItem(); // Сброс
    }

    private async Task DeleteItem()
    {
        if (selectedItem.Id == 0) return;
        await ItemService.DeleteItemAsync(selectedItem.Id);
        await LoadData();
        CreateNewItem();
    }

    private async Task UpdatePriceFast(ItemBase item, object? val)
    {
        if (decimal.TryParse(val?.ToString(), out decimal price))
        {
            item.CurrentMarketPrice = price;
            await ItemService.UpdateItemAsync(item);
        }
    }

    // === Управление Коллекциями ===
    private void ToggleCollectionManager() => showCollectionManager = !showCollectionManager;

    private void EditCollection(GameCollection col)
    {
        editingCollection = col;
        newCollectionName = col.Name;
    }

    private async Task SaveCollection()
    {
        if (string.IsNullOrWhiteSpace(newCollectionName)) return;

        var col = editingCollection ?? new GameCollection();
        col.Name = newCollectionName;

        await ItemService.SaveCollectionAsync(col);
        collections = await ItemService.GetCollectionsAsync();

        newCollectionName = "";
        editingCollection = null;
    }

    private async Task DeleteCollection(int id)
    {
        try
        {
            await ItemService.DeleteCollectionAsync(id);
            collections = await ItemService.GetCollectionsAsync();
        }
        catch (Exception ex)
        {
            statusMessage = "Ошибка: " + ex.Message;
        }
    }

    // === Парсер ===
    private async Task RunImport()
    {
        isBusy = true; currentAction = "import";
        try { statusMessage = await ParserService.ImportAllSkinsAsync(); await LoadData(); }
        catch (Exception ex) { statusMessage = ex.Message; }
        isBusy = false;
    }

    private async Task RunParser()
    {
        isBusy = true; currentAction = "parse";
        try { statusMessage = await ParserService.UpdateAllPricesAsync(); await LoadData(); }
        catch (Exception ex) { statusMessage = ex.Message; }
        isBusy = false;
    }

    private string GetRarityClass(ItemRarity r) => r switch
    {
        ItemRarity.Common => "rarity-common",
        ItemRarity.Uncommon => "rarity-uncommon",
        ItemRarity.Rare => "rarity-rare",
        ItemRarity.Epic => "rarity-epic",
        ItemRarity.Legendary => "rarity-legendary",
        ItemRarity.Arcane => "rarity-arcane",
        ItemRarity.Nameless => "rarity-nameless",
        _ => "bg-secondary"
    };
}