@page "/market-editor"
@using StandoffPortfolioTracker.Core.Entities
@using StandoffPortfolioTracker.Core.Enums
@using StandoffPortfolioTracker.AdminPanel.Services
@inject ItemService ItemService
@inject PriceParserService ParserService
@rendermode InteractiveServer

<h3>🛒 Редактор Предметов (Справочник)</h3>

<div class="card mb-4 border-warning">
    <div class="card-body">
        <h5 class="card-title">⚙️ Управление данными</h5>
        <div class="d-flex gap-3 align-items-center">
            <button class="btn btn-danger" @onclick="RunImport" disabled="@isBusy">
                @if (isBusy && currentAction == "import")
                {
                    <span class="spinner-border spinner-border-sm"></span> <span>Качаем базу...</span>
                }
                else
                {
                    <span>🌍 Импорт ВСЕХ скинов (API)</span>
                }
            </button>

            <button class="btn btn-primary" @onclick="RunParser" disabled="@isBusy">
                @if (isBusy && currentAction == "parse")
                {
                    <span class="spinner-border spinner-border-sm"></span> <span>Обновляем цены...</span>
                }
                else
                {
                    <span>💲 Обновить цены с рынка</span>
                }
            </button>
        </div>

        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="alert alert-info mt-2 mb-0">@statusMessage</div>
        }
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Ручное добавление</div>
            <div class="card-body">
                <EditForm Model="@newItem" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="mb-2">
                        <label>Название (напр. Empire Case)</label>
                        <InputText @bind-Value="newItem.Name" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>Скин (напр. Necromancer)</label>
                        <InputText @bind-Value="newItem.SkinName" class="form-control" placeholder="Пусто для кейсов" />
                    </div>

                    <div class="mb-2">
                        <label>Тип</label>
                        <InputSelect @bind-Value="newItem.Type" class="form-select">
                            @foreach (var type in Enum.GetValues(typeof(ItemType)))
                            {
                                <option value="@type">@type</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="mb-2">
                        <label>Редкость</label>
                        <InputSelect @bind-Value="newItem.Rarity" class="form-select">
                            @foreach (var r in Enum.GetValues(typeof(ItemRarity)))
                            {
                                <option value="@r">@r</option>
                            }
                        </InputSelect>
                    </div>

                    <button type="submit" class="btn btn-success mt-2 w-100">Создать вручную</button>
                </EditForm>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                Все предметы в базе (@(items?.Count ?? 0) шт.)
            </div>
            <div class="card-body" style="max-height: 700px; overflow-y: auto;">
                @if (items == null)
                {
                    <p>Загрузка...</p>
                }
                else
                {
                    <table class="table table-striped align-middle table-sm">
                        <thead style="position: sticky; top: 0; background: white; z-index: 1;">
                            <tr>
                                <th>Фото</th>
                                <th>Название</th>
                                <th style="width: 140px;">Цена (G)</th>
                                <th>Инфо</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="img"
                                                 style="width: 50px; height: 50px; object-fit: contain;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted" style="font-size: 0.8rem;">Нет фото</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (!string.IsNullOrEmpty(item.SkinName))
                                        {
                                            <span class="text-muted"> | @item.SkinName</span>
                                        }
                                    </td>
                                    <td>
                                        <input type="number"
                                               step="0.01"
                                               class="form-control form-control-sm"
                                               value="@item.CurrentMarketPrice"
                                               @onchange="@(e => UpdatePrice(item, e.Value))" />
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @item.Type <br /> @item.Rarity
                                        </small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<ItemBase>? items;
    private ItemBase newItem = new();

    // Переменные для состояния кнопок
    private bool isBusy = false;
    private string currentAction = "";
    private string statusMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        items = await ItemService.GetAllItemsAsync();
    }

    private async Task HandleSubmit()
    {
        newItem.CollectionId = 1; // Заглушка, если коллекция не выбрана
        await ItemService.AddItemAsync(newItem);
        newItem = new ItemBase();
        await LoadData();
    }

    // Ручное обновление цены в ячейке таблицы
    private async Task UpdatePrice(ItemBase item, object? newValue)
    {
        if (decimal.TryParse(newValue?.ToString(), out decimal price))
        {
            item.CurrentMarketPrice = price;
            await ItemService.UpdateItemAsync(item);
        }
    }

    // Массовый импорт скинов (названия, картинки)
    private async Task RunImport()
    {
        isBusy = true;
        currentAction = "import";
        statusMessage = "Начинаем загрузку базы скинов...";
        StateHasChanged();

        try
        {
            statusMessage = await ParserService.ImportAllSkinsAsync();
            await LoadData();
        }
        catch (Exception ex)
        {
            statusMessage = $"Ошибка: {ex.Message}";
        }

        isBusy = false;
        currentAction = "";
    }

    // Обновление цен (Парсинг)
    private async Task RunParser()
    {
        isBusy = true;
        currentAction = "parse";
        statusMessage = "Парсим цены с сайта...";
        StateHasChanged();

        try
        {
            statusMessage = await ParserService.UpdateAllPricesAsync();
            await LoadData();
        }
        catch (Exception ex)
        {
            statusMessage = $"Ошибка парсинга: {ex.Message}";
        }

        isBusy = false;
        currentAction = "";
    }
}