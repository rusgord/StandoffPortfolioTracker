@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
    // 👇 Подключаем наш новый шаблон
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="auth-header">
    <div class="auth-icon-wrapper">
        <span>🚀</span>
    </div>
    <h3 class="auth-title">С возвращением!</h3>
    <p class="auth-subtitle">Войдите, чтобы управлять портфелем</p>
</div>

<div class="auth-body">
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email адрес</label>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Пароль</label>
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                <label class="form-check-label small text-muted" for="rememberMeCheck">Запомнить</label>
            </div>
        </div>

        <button id="login-submit" type="submit" class="btn-auth-primary">Войти в аккаунт</button>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="auth-divider">ИЛИ</div>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" class="btn-google mb-2 w-100" name="provider" value="@provider.Name" title="Войти через @provider.DisplayName">
                    @if (provider.DisplayName == "Google")
                    {
                        <i class="bi bi-google text-danger fs-5"></i>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-right text-primary fs-5"></i>
                    }
                    <span>Войти через @provider.DisplayName</span>
                </button>
            }
        </form>
    }

    <div class="auth-footer-links">
        Нет аккаунта? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Зарегистрироваться</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}