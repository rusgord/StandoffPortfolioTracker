@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon-wrapper">
                <span>🚀</span>
            </div>
            <h3 class="auth-title">С возвращением!</h3>
            <p class="auth-subtitle">Войдите, чтобы управлять портфелем</p>
        </div>

        <div class="auth-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email адрес</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                        <label class="form-check-label small text-muted" for="rememberMeCheck">Запомнить</label>
                    </div>
                </div>

                <button id="login-submit" type="submit" class="btn-auth-primary">Войти в аккаунт</button>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="auth-divider">ИЛИ</div>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        @if (provider.DisplayName == "Google")
                        {
                            <button type="submit" class="btn-google" name="provider" value="@provider.Name" title="Войти через Google">
                                <svg width="18" height="18" viewBox="0 0 18 18"><path d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844a4.14 4.14 0 0 1-1.796 2.716v2.259h2.908c1.702-1.567 2.684-3.875 2.684-6.615z" fill="#4285f4" /><path d="M9 18c2.43 0 4.467-.806 5.956-2.18l-2.908-2.259c-.806.54-1.836.86-3.048.86-2.344 0-4.328-1.584-5.036-3.715H.957v2.332A8.997 8.997 0 0 0 9 18z" fill="#34a853" /><path d="M3.964 10.71A5.41 5.41 0 0 1 3.682 9c0-.593.102-1.17.282-1.71V4.958H.957A8.996 8.996 0 0 0 0 9c0 1.452.348 2.827.957 4.042l3.007-2.332z" fill="#fbbc05" /><path d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0A8.997 8.997 0 0 0 .957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z" fill="#ea4335" /></svg>
                                Войти через Google
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-dark w-100 mt-2" name="provider" value="@provider.Name">@provider.DisplayName</button>
                        }
                    }
                </form>
            }

            <div class="auth-footer-links">
                Нет аккаунта? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Зарегистрироваться</a>
            </div>
        </div>
    </div>
</div>