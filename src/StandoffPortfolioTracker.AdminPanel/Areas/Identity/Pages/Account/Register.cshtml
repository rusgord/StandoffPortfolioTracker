@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml"; // 👈 Подключаем шаблон
}

<div class="auth-header">
    <div class="auth-icon-wrapper" style="background: var(--auth-accent-color); color: #1a202c;">
        <span>✨</span>
    </div>
    <h3 class="auth-title">Создать аккаунт</h3>
    <p class="auth-subtitle">Начните трекать свой профит сегодня</p>
</div>

<div class="auth-body">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email адрес</label>
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Пароль</label>
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">Повторите пароль</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn-auth-primary">Зарегистрироваться</button>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="auth-divider">ИЛИ</div>
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" class="btn-google mb-2 w-100" name="provider" value="@provider.Name">
                    @if (provider.DisplayName == "Google")
                    {
                        <i class="bi bi-google text-danger fs-5"></i>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-right text-primary fs-5"></i>
                    }
                    <span>Регистрация через @provider.DisplayName</span>
                </button>
            }
        </form>
    }

    <div class="auth-footer-links">
        Уже есть аккаунт? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Войти</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}